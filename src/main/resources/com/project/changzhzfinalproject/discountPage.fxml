         <font>
            <Font name="Dubai Bold" size="18.0" />
         </font>
      </Button>
      <Label fx:id="successDisplay" alignment="CENTER" layoutX="452.0" layoutY="521.0" opacity="0.0" text="Success！" textAlignment="CENTER" textFill="#44ff3a">
         <font>
            <Font name="Dubai Bold" size="18.0" />
         </font>
      </Label>
      <Button fx:id="placeOrderBtn" layoutX="598.0" layoutY="466.0" mnemonicParsing="false" onAction="#placeOrderBtnClick" text="Place Order" textFill="#fe821c">
         <font>
            <Font name="Dubai Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="emailBtn" layoutX="564.0" layoutY="2.0" mnemonicParsing="false" onAction="#emailBtnClick" text="Send To Customers (BETA)" textFill="#fc821e">
         <font>
            <Font name="Dubai Bold" size="14.0" />
         </font>
      </Button>
      <Label fx:id="emailSuccess" layoutX="623.0" layoutY="43.0" opacity="0.0" text="Success!" textFill="#80ef44">
         <font>
            <Font name="Dubai Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
