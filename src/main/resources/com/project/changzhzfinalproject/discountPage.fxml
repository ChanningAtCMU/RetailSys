      </Button>
      <Label alignment="CENTER" layoutX="288.0" layoutY="15.0" text="Random 10 Discounts" textFill="#fc821c">
         <font>
            <Font name="Dubai Bold" size="24.0" />
         </font>
      </Label>
      <TableView fx:id="discountTable" layoutY="81.0" prefHeight="333.0" prefWidth="800.0">
        <columns>
          <TableColumn fx:id="idCol" prefWidth="65.99999749660492" text="ItemID" />
          <TableColumn fx:id="categoryCol" prefWidth="84.66666412353516" text="Category" />
            <TableColumn fx:id="colorCol" prefWidth="69.3333740234375" text="Color" />
            <TableColumn fx:id="colorCodeCol" prefWidth="109.99998474121094" text="ColorCode" />
            <TableColumn fx:id="sizeCol" prefWidth="47.33331298828125" text="Size" />
