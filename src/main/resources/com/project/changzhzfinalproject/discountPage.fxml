            <TableColumn fx:id="descriptionCol" prefWidth="245.3333740234375" text="Description" />
        </columns>
      </TableView>
      <Label layoutX="266.0" layoutY="444.0" text="ItemID" textFill="#fe821c">
         <font>
            <Font name="Dubai Bold" size="24.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="discountChoice" layoutX="226.0" layoutY="496.0" prefWidth="150.0" />
