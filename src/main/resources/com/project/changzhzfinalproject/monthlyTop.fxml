<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.changzhzfinalproject.monthlyTopController">
   <children>
      <Button fx:id="backBtn" layoutY="1.0" mnemonicParsing="false" onAction="#backBtnClick" text="←">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <BarChart fx:id="shirtChart" layoutY="140.0" prefHeight="461.0" prefWidth="280.0" title="Top3 Colors for Shirts">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis label="Quantity" side="LEFT" />
        </yAxis>
      </BarChart>
      <BarChart fx:id="trouserChart" layoutX="260.0" layoutY="140.0" prefHeight="461.0" prefWidth="280.0" title="Top3 Colors for Trousers">
         <xAxis>
            <CategoryAxis side="BOTTOM" />
         </xAxis>
         <yAxis>
            <NumberAxis label="Quantity" side="LEFT" />
         </yAxis>
      </BarChart>
      <BarChart fx:id="jacketChart" layoutX="520.0" layoutY="140.0" prefHeight="461.0" prefWidth="280.0" title="Top3 Colors for Jackets">
         <xAxis>
            <CategoryAxis side="BOTTOM" />
         </xAxis>
         <yAxis>
            <NumberAxis label="Quantity" prefWidth="52.0" side="LEFT" />
         </yAxis>
      </BarChart>
      <Button fx:id="monthBtn" layoutX="400.0" layoutY="79.0" mnemonicParsing="false" onAction="#viewBtnClick" text="View" />
      <ChoiceBox fx:id="monthChoice" layoutX="244.0" layoutY="79.0" prefWidth="150.0" />
      <Text fill="#fc821e" layoutX="319.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Monthly Report">
         <font>
            <Font name="Dubai Bold" size="24.0" />
         </font>
      </Text>
      <Label layoutX="49.0" layoutY="76.0" text="Choose a month to view" textFill="#fc821e">
         <font>
            <Font name="Dubai Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
